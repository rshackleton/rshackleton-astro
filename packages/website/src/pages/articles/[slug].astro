---
import ArticleSummary from '@/components/ArticleSummary.astro';
import Code from '@/components/Code.astro';
import Hero from '@/components/Hero.astro';
import Image from '@/components/Image.astro';
import Tweet from '@/components/Tweet.astro';
import { formatDate } from '@/helpers/date';
import Layout from '@/layouts/Layout.astro';
import { getArticle, getArticles } from '@/sanity/articles';
import { PortableText } from '@rshackleton/astro-portabletext';

export async function getStaticPaths() {
  const articles = await getArticles();
  return articles.map((article) => ({ params: { slug: article.slug } }));
}

const { content, date, seo, title } = await getArticle(Astro.params.slug ?? '');
---

<Layout seo={seo}>
  <Hero title={title} subtitle={formatDate(date)} />
  <section class="rich-text container mx-auto">
    <PortableText
      components={{
        types: {
          articleSummary: ArticleSummary,
          code: Code,
          image: Image,
          tweet: Tweet,
        },
      }}
      value={content}
    />
  </section>
</Layout>
