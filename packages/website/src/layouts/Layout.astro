---
import '@/base.css';
import Footer from '@/components/Footer.astro';
import Header from '@/components/Header.astro';
import TrackVitals from '@/components/TrackVitals.astro';
import { getMaster } from '@/sanity/master';

export interface Props {
  metaDescription?: string;
  metaTitle: string;
}

const { metaDescription, metaTitle } = Astro.props;

const master = await getMaster();

const isProduction = import.meta.env.PUBLIC_VERCEL_ENV === 'production';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{metaTitle} | {master.metaTitle}</title>
    <meta name="description" content={metaDescription ?? master.metaDescription} />
  </head>
  <body>
    <a
      class="bg-primary-700 pointer-events-none absolute top-0 left-1/2 -translate-x-[50%] p-2 text-base font-medium text-white opacity-0 focus-visible:pointer-events-auto focus-visible:opacity-100"
      href="#main">Skip to Content</a
    >
    <Header />
    <main id="main">
      <slot />
    </main>
    <Footer />
    {isProduction && <TrackVitals />}
  </body>
</html>
