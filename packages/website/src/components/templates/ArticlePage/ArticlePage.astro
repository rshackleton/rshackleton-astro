---
import Hero from '@/components/organisms/Hero/Hero.astro';
import { formatDate } from '@/helpers/date';
import Layout from '@/layouts/Layout.astro';

type Props = {
  date: Date;
  summary: string;
  tags: string[];
  title: string;
};

const { date, summary, tags, title } = Astro.props;

const seo: SEOModel = {
  title,
  description: summary,
  ogImage: new URL(`/api/og/${title}`, Astro.site).toString(),
  ogType: 'article',
};
---

<Layout seo={seo}>
  <Hero title={title} subtitle={formatDate(date)} tags={tags} />
  <section class="rich-text mx-auto max-w-[80ch] px-4">
    <slot />
  </section>
</Layout>
