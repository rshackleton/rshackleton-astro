---
import { formatDate, formatDateISO } from '../helpers/date';
import type { ArticleModel } from '../sanity/articles';

interface Props {
  items: ArticleModel[];
  title?: string;
}

const { items, title } = Astro.props;
---

<div class="container mx-auto my-[8vw] px-4">
  {title && <h2 class="mb-[1em] text-center text-3xl font-bold">{title}</h2>}
  <ul class="grid grid-cols-[repeat(auto-fit,minmax(300px,1fr))] gap-x-4 gap-y-6">
    {
      items.map((article) => (
        <li class="flex max-w-[440px]">
          <a
            class="group/link bg-primary-50 block rounded-lg p-4"
            href={`/articles/${article.slug}`}
          >
            <h2 class="text-primary-800 mb-4 text-lg font-medium group-hover/link:underline">
              {article.title}
            </h2>
            <time class="text-primary-700 mb-2 block" datetime={formatDateISO(article.date)}>
              {formatDate(article.date)}
            </time>
            <p class="text-base text-neutral-700">{article.summary}</p>
          </a>
        </li>
      ))
    }
  </ul>
</div>
