---
import Tag from './Tag.astro';

type Props = {
  tags: string[];
};

const { tags } = Astro.props;
---

{
  tags.length && (
    <ul class="flex flex-wrap gap-2 font-mono font-bold uppercase text-primary-200 text-xs">
      {tags.map((tag) => (
        <li>
          <Tag>{tag}</Tag>
        </li>
      ))}
    </ul>
  )
}
