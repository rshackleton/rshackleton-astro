---
import Tag from './Tag.astro';

type Props = {
  tags: string[];
};

const { tags } = Astro.props;
---

{
  tags.length && (
    <ul class="text-primary-200 flex flex-wrap gap-2 font-mono text-xs font-bold uppercase">
      {tags.map((tag) => (
        <li>
          <Tag>{tag}</Tag>
        </li>
      ))}
    </ul>
  )
}
