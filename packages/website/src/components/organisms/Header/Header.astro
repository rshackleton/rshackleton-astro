---
import github from '@/assets/github.svg?raw';
import linkedin from '@/assets/linkedin.svg?raw';
import twitter from '@/assets/twitter.svg?raw';
---

<header class="bg-primary-900">
  <div
    class="mx-auto flex max-w-screen-xl flex-col items-center justify-between gap-x-4 gap-y-4 px-4 py-8 sm:flex-row sm:py-12"
  >
    <a class="inline-block font-bold underline-offset-4 text-2xl hover:underline" href="/">
      Richard Shackleton
    </a>

    <ul class="flex items-center gap-x-4">
      <li>
        <a
          class="flex w-6 text-neutral-100 transition-colors hover:text-primary-300 sm:w-8"
          href="https://github.com/rshackleton"
          rel="nofollow"
          target="_blank"
          aria-label="Find me on GitHub"
          set:html={github}
        />
      </li>
      <li>
        <a
          class="flex w-6 text-neutral-100 transition-colors hover:text-primary-300 sm:w-8"
          href="https://twitter.com/shackleberry112"
          rel="nofollow"
          target="_blank"
          aria-label="Find me on Twitter"
          set:html={twitter}
        />
      </li>
      <li>
        <a
          class="flex w-6 text-neutral-100 transition-colors hover:text-primary-300 sm:w-8"
          href="https://www.linkedin.com/in/rpshackleton/"
          rel="nofollow"
          target="_blank"
          aria-label="Find me on LinkedIn"
          set:html={linkedin}
        />
      </li>
    </ul>
  </div>
</header>
