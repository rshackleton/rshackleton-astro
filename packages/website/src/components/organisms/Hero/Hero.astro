---
import TagList from '@/components/atoms/TagList.astro';

interface Props {
  anchorId?: string;
  content?: string;
  cta?: CtaModel;
  subtitle?: string;
  tags?: string[];
  title: string;
}

const { anchorId, content, cta, subtitle, tags, title } = Astro.props;
---

<section
  id={anchorId}
  class="relative my-[max(64px,4vw)] grid place-content-center place-items-center overflow-hidden"
>
  <div class="relative mx-auto flex w-full flex-col items-center px-4 text-center">
    <h1 class="max-w-[24ch] font-bold text-5xl">{title}</h1>
    {subtitle && <p class="mt-3 font-medium text-lg">{subtitle}</p>}
    {
      tags && (
        <div class="mt-5">
          <TagList tags={tags} />
        </div>
      )
    }
    {content && <p class="mx-auto mt-5 max-w-prose text-lg">{content}</p>}
    {
      cta && cta.url && (
        <a
          class="mt-8 inline-block scale-100 rounded bg-primary-700 px-5 py-3 font-bold text-white subpixel-antialiased transition will-change-transform text-base hover:scale-110 hover:bg-primary-600"
          href={cta.url}
          target={cta.target}
        >
          {cta.text}
        </a>
      )
    }
  </div>
</section>
